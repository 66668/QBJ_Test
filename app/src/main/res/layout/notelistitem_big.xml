<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notelistitem_big_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitem_bigbg_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/notelistitem_big_sync"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:contentDescription="@string/contentDescription"
        android:scaleType="centerCrop"
        android:src="@drawable/sync_finished" >
    </ImageView>

    <FrameLayout
        android:layout_width="78dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip" >

        <ImageView
            android:id="@+id/notelistitem_big_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/contentDescription"
            android:scaleType="centerCrop"
            android:src="@drawable/notelist_thumbnail_note" >
        </ImageView>

        <ImageView
            android:id="@+id/notelistitem_big_thumbnail_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/thumbnail_bg"
            android:visibility="visible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:orientation="horizontal"
            android:paddingRight="4dip" >

            <TextView
                android:id="@+id/notelistitem_big_title"
                android:layout_width="0dip"
                android:layout_height="20dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#FF000000"
                android:textSize="15sp" >
            </TextView>
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_marginRight="20dip"
            android:layout_height="0dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/notelistitem_big_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#FF4485d6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/notelistitem_big_shortcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dip"
                android:maxLines="3"
                android:paddingBottom="2dip"
                android:paddingRight="6dip"
                android:text="TextView"
                android:textColor="#FF656565"
                android:textSize="12sp" >
            </TextView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dip"
            android:layout_marginBottom="4dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/notelistitem_big_source"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:paddingRight="8dip"
                android:singleLine="true"
                android:text="@string/test_source"
                android:textColor="#ffb6b6b6"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-20dip"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/arrows" >
    </ImageView>

</LinearLayout>