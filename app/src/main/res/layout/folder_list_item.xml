<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/folderlistitem_bg"
    android:background="@drawable/listitem_trans_selector"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/folder_listitem_caticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/folderlistitem_cat"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="8dip"
            android:paddingLeft="10dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/folder_listitem_foldername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15sp"
                android:text="文件夹名字"
                android:textColor="#ff000000" />
            
            <ImageView android:id="@+id/folder_listitem_isdefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:visibility="gone"/>
            
        </LinearLayout>

        <TextView
            android:id="@+id/folder_listitem_notecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:text="1篇笔记"
            android:textColor="#ff656565" />
    </LinearLayout>

    <ImageView
        android:id="@+id/folderlistitem_arrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrows"
        android:layout_marginRight="15dip" />

</LinearLayout>