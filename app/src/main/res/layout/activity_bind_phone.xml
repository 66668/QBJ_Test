<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/page_bg" >
    
    <FrameLayout
        android:id="@+id/bind_toolbg_framelayout"
        android:layout_width="fill_parent"
        android:layout_height="46dip" >

        <TextView 
            android:id="@+id/bind_back"
            style="@style/toolbar_back"
            android:text="绑定手机号"/>
        
    </FrameLayout>
    
    <EditText 
        android:id="@+id/bind_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="16sp"
        android:inputType="phone"
        android:hint="请输入手机号"
        android:background="@null"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/image_code_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="text"
            android:hint="请输入图形验证码"
            android:padding="12dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/image_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"></View>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <EditText 
	        android:id="@+id/bind_verticode"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:padding="12dp"
	        android:textSize="16sp"
	        android:inputType="number"
	        android:hint="请输入验证码"
	        android:background="@null"/>
        
        <Button 
            android:id="@+id/get_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:background="@null"
            android:text="获取验证码"/>
        
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"></View>

    <EditText
        android:id="@+id/bind_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:hint="请输入用户密码"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="50dp"
        android:background="#dddddd"></View>
    
    <Button 
        android:id="@+id/bind_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="16sp"
        android:textColor="#fff"
        android:padding="5dp"
        android:background="@drawable/longbtn_selector"
        android:layout_margin="12dp"/>
    

</LinearLayout>
