<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/authhtml_page_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical">

    <!-- tool bar -->
    <FrameLayout
        android:id="@+id/auth_toolbar_layout"
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:paddingBottom="2dip">

        <Button
            android:id="@+id/auth_menu"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/auth_back"
            android:layout_width="48dip"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:contentDescription="@null"/>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/auth_progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="4dp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.webkit.WebView
            android:id="@+id/auth_web"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/auth_login_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <EditText
                android:id="@+id/auth_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:layout_marginRight="5dip"
                android:hint="请输入邮箱"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/auth_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:hint="输入密码"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/auth_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/longbtn_selector"
                android:text="确定" />
        </LinearLayout>

    </FrameLayout>


</LinearLayout>
