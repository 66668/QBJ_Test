<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
	<!-- tool bar -->
	<FrameLayout android:id="@+id/reg_toolbar_layout" 
		android:layout_height="46dip" 
		android:background="@drawable/toolbg"
		android:layout_width="fill_parent">
		
		<ImageButton 
		    style="@style/image_button"
			android:id="@+id/reg_back"  
		 	android:layout_gravity="left">
		</ImageButton>
				
		<ImageButton android:layout_width="wrap_content" 
			android:layout_height="fill_parent" 
			android:id="@+id/reg_about" 
			android:layout_marginLeft="0dip" 
			android:layout_marginTop="2dip"
			android:layout_gravity="right">
		</ImageButton>
	</FrameLayout>
	
<FrameLayout android:layout_width="fill_parent"
android:layout_height="fill_parent">

<ImageView android:id="@+id/reg_bg"
 	android:scaleType="centerCrop"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
</ImageView>

 <ScrollView android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
 	android:scrollbars="vertical">

	<LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:orientation="vertical">
	<LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content">
<!-- 
		<EditText android:id="@+id/reg_username" 
			android:hint="@string/reg_username"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:text="" 
			android:singleLine="true"
			android:maxLength="50"
			android:textSize="16sp"
			android:layout_height="wrap_content" 
			android:layout_width="0dip"
			android:layout_weight="1" android:layout_marginLeft="10dip" android:layout_marginTop="10dip">
		</EditText>
		 -->	  
		<ImageView android:src="@drawable/notcheck16" 
			android:id="@+id/reg_username_chk"
		 	android:scaleType="centerCrop"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_gravity="center_vertical">
		</ImageView>
	</LinearLayout>

	<LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_marginTop="4dip" >

		<EditText android:id="@+id/reg_email" 
			android:hint="@string/reg_email"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:text="" 
			android:singleLine="true"
			android:maxLength="50"
			android:textSize="16sp"
			android:inputType="textEmailAddress"
			android:layout_height="wrap_content" 
			android:layout_width="0dip"
			android:layout_weight="1"
			android:layout_marginLeft="20dip">
		</EditText>
		<ImageView android:src="@drawable/notcheck16" 
			android:id="@+id/reg_email_chk"
		 	android:scaleType="centerCrop"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_gravity="center_vertical">
		</ImageView>
	</LinearLayout>

	<LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_marginTop="4dip" >
	
		<EditText android:id="@+id/reg_password" 
			android:hint="@string/reg_password"
			android:text="" 
			android:singleLine="true"
			android:password="true"
			android:maxLength="50"
			android:textSize="16sp"
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:layout_weight="1" 
			android:layout_marginLeft="20dip">
		</EditText>
<!-- 	
		<EditText android:id="@+id/reg_confirm_password" 
			android:hint="@string/reg_confirm_password"
			android:text="" 
			android:singleLine="true"
			android:password="true"
			android:maxLength="50"
			android:textSize="16sp"
			android:layout_height="wrap_content" 
			android:layout_marginLeft="3dip"
			android:layout_width="fill_parent"
			android:layout_weight="1"
			android:nextFocusDown="@+id/reg_invite_code">
		</EditText> 
 -->			
		
		<ImageView android:src="@drawable/notcheck16" 
			android:id="@+id/reg_password_chk"
		 	android:scaleType="centerCrop"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_gravity="center_vertical">
		</ImageView>
		
	 </LinearLayout>
	 
	 <FrameLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_marginTop="4dip" >
<!-- 
	 	<EditText android:id="@+id/reg_invite_code" 
			android:hint="@string/reg_invite_code"
			android:text="" 
			android:singleLine="true"
			android:maxLength="50"
			android:textSize="16sp"
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:layout_weight="1" 
			android:layout_marginLeft="10dip"
			android:nextFocusDown="@+id/reg_register">
	 	</EditText>
 	 -->
	 	<Button android:id="@+id/reg_register" 
			android:text="注  册" 
			android:background="@drawable/longbtn_selector"
			android:textSize="14sp"
			android:textColor="#ff2b63b6"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:layout_marginLeft="3dip"
			android:layout_marginRight="0dip"
			android:layout_gravity="center_horizontal">
		</Button>
		<!-- 
		<ImageView android:src="@drawable/notcheck16" 
			android:id="@+id/reg_blank"
		 	android:scaleType="centerCrop"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_gravity="center_vertical">
		</ImageView>
	 -->
	</FrameLayout>	 

	</LinearLayout>
</ScrollView>
</FrameLayout>
</LinearLayout>
