<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/catlist_page_bg"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/page_bg"
  android:orientation="vertical">
  
   	<!-- tool bar -->
	<FrameLayout android:id="@+id/taglist_toolbar_layout" 
		android:layout_height="46dip" 
        android:background="@drawable/toolbg"
		android:layout_width="fill_parent">
		
		<TextView 
            android:id="@+id/catlist_back"
            style="@style/toolbar_back"
            android:text="@string/folderlist_select"/>
		
		<ImageButton android:layout_width="48dip" 
			android:layout_height="fill_parent" 
			android:id="@+id/catlist_new"
			android:src="@drawable/newfolder1" 
			android:background="@drawable/btn_trans_selector"
			android:layout_gravity="right" 
			android:layout_marginRight="50dip">
		</ImageButton>
				
		<ImageButton android:layout_width="48dip" 
			android:layout_height="fill_parent" 
			android:id="@+id/catlist_save" 
			android:background="@drawable/btn_trans_selector"
			android:src="@drawable/ok"
			android:layout_gravity="right">
		</ImageButton>
		
	</FrameLayout>
	
	<FrameLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<ListView android:id="@+id/catlist_list" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:listSelector="@null" 
        	android:fadingEdge="none"
			android:cacheColorHint="#00000000" 
			android:divider="#AFAFAF" 
			android:dividerHeight="1px"  
			android:fastScrollEnabled="true"
		/>
	</FrameLayout>
</LinearLayout>
