<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dip"
    android:background="@drawable/bottom_toolbg"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/record_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dip"
        android:layout_height="3dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_weight="2"
        android:max="100"
        android:progress="0" />

    <TextView
        android:id="@+id/record_time"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="00:00"
        android:textColor="#666666"
        android:textSize="14sp" />

    <!--    TODO 暂停/继续的功能有问题，不可用，暂时隐藏-->
    <Button
        android:id="@+id/record_start"
        style="@style/button_grey"
        android:clickable="false"
        android:enabled="false"
        android:text="@string/noteedit_record_start"
        android:textSize="14sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/record_stop"
        style="@style/button_grey"
        android:layout_marginRight="5dip"
        android:text="@string/noteedit_record_stop"
        android:textSize="14sp" />

</LinearLayout>