        android:layout_height="0.5dp"
        android:background="@color/divider"/>
    
    <TextView 
        android:id="@+id/notelistitem_menu_edit"
        android:text="@string/notelistitem_menu_edit"
        style="@style/menu_item"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>
    
    <TextView 
        android:id="@+id/notelistitem_menu_sync"
        android:text="@string/notelistitem_menu_sync"
        style="@style/menu_item"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>
	
	<TextView 
        android:id="@+id/notelistitem_menu_delete"
