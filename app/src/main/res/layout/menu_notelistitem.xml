        android:background="@color/divider"/>
    
    <TextView 
        android:id="@+id/notelistitem_menu_info"
        android:text="@string/notelistitem_menu_info"
        style="@style/menu_item"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>
    
    <TextView 
        android:id="@+id/notelistitem_menu_cancel"
        android:text="@string/notelistitem_menu_cancel"
        style="@style/menu_item"/>
    
</LinearLayout>
