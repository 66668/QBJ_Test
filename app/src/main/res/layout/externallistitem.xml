<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/externallistitem_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/externallist_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dip"
        android:src="@drawable/logo_360" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/externallist_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="12dip"
            android:gravity="center_vertical"
            android:textColor="#ff262626" />

        <TextView
            android:id="@+id/externallist_intro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:text="@string/auth_list_baidu_intro"
            android:textColor="#ff262626"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView android:id="@+id/externallist_already_binding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_gravity="right|center_vertical"
        android:textSize="14sp"
        android:textColor="#ff262626"
        android:layout_marginRight="10dip"/>
    
    <ImageView android:id="@+id/externallist_item_arrows"
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dip"
        android:src="@drawable/arrows" />

</LinearLayout>