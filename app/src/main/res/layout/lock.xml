<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#309AF2"
  android:orientation="vertical">
  
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="40dp"
	    android:layout_marginBottom="10dp" 
	    android:src="@drawable/logo_120"/>
    
	<com.thinkernote.ThinkerNote.other.LockPatternView
	    android:id="@+id/lock_patternView"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp" />
	  
	<LinearLayout 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content">
		  
		<Button android:text="@string/login_trial" 
			android:id="@+id/lock_left" 
			android:textColor="#FFFFFFFF"
			android:textSize="14sp"
			android:background="@color/transparent"
			android:layout_height="40dp" 
			android:layout_width="0dp" 
			android:layout_gravity="center"
			android:layout_weight="1">
		</Button>
		
		<Button 
		    android:text="@string/login_newuser" 
			android:id="@+id/lock_right" 
			android:textColor="#FFFFFFFF"
			android:textSize="14sp"
			android:background="@color/transparent"
			android:layout_height="40dp" 
			android:layout_width="0dp" 
			android:layout_gravity="center"
			android:layout_weight="1" >
		</Button>
		  
	</LinearLayout>
	
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"/>
	
	<TextView 
  	    android:text="TextView" 
		android:id="@+id/lock_hint" 
		android:singleLine="true"
		android:textSize="14sp"
		android:textColor="@color/white"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:gravity="center_horizontal" 
		android:layout_marginBottom="10dp">
	</TextView>
</LinearLayout>
